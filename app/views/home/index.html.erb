<div id="image-wrapper" class="valign-wrapper">
  <div id="homecontent" class="home-headline center white-text">
    <br>

    <div class="container">
      <div class="card-panel purple">
        <a href="<%= root_path %>" class="center hide-on-large-only"><img class="hero-logo" src="<%= path_to_image('logo.png') %>"></a>

        <h1>We can host your LAN party</h1>

        <h2><i>no matter the size!</i></h2>
        <br>

        <p class="flow-text">LanCore is a free, open source platform for hosting your LAN party. No sign-ups or logins
          required, just setup your party, send a link and token to the attendees, and have fun!</p>
        <br>
        <%= link_to "Start your party!", new_party_path, class: 'waves-effect waves-light btn-large col s6'%>
        <br><br>
      </div>
    </div>
  </div>
  <img class="hide-on-small-only home-img" src="<%= path_to_image('dreamhack2004landscape.jpg') %>">
  <img class="hide-on-med-and-up home-img" src="<%= path_to_image('dreamhack2004portrait.jpg') %>">
</div>
<!-- Image Layout JQuery -->
<script>
    $(document).ready(function () {
        var $window = $(window);
        var homeImage = $('#image-wrapper');
        var navWrapper = $('.nav-wrapper');
        var footer = $('.page-footer');
        var content = $('#homecontent');

        function checkWidth() {
            var viewportHeight = $window.height() - navWrapper.height() - footer.height() - 20;
            var contentHeight = content.height();
            if (viewportHeight > contentHeight) homeImage.height(viewportHeight);
            else homeImage.height(contentHeight);
        }

        checkWidth();
        $(window).resize(checkWidth);
    });
</script>